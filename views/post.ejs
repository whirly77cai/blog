<%- include header %>
<br>
<h2>发表文章</h2>
<br>
<form class="form-horizontal" method="POST">
  <div class="form-group">
	<h4 class="col-sm-offset-1 col-sm-9">标题</h4>
    <div class="col-sm-offset-1 col-sm-9">
    	<input type="text" class="form-control" name="title"  placeholder="文章标题" autofocus="true">
    </div>
  </div>
  <div class="form-group">
	<h4 class="col-sm-offset-1 col-sm-9">标签</h4>
  	<div class="col-sm-offset-1 col-sm-9">
  		<select class="form-control" id="tag_select" name="tag" >
  		    <% if(user.tags){ %>
  		    <% user.tags.forEach(function (tag, index){  %>
  		  	 <option><%= tag %></option>
  		    <% })  %>
  		    <% } %>
  		</select> 
  	</div> 
  </div>
  
  <div class="form-group">
  	<h4 class="col-sm-offset-1 col-sm-9">正文</h4>
  	<div class="col-sm-offset-1 col-sm-9">
  		<textarea class="form-control" id="article_area" name="article" rows="20"></textarea>
    </div>
  </div>
  <div class="col-sm-offset-9">
  	<input class="btn btn-default" type="submit" value="Submit">
  </div>
</form>
<%- include footer %>
